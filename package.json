{
  "name": "chat-app-backend",
  "version": "1.0.0",
  "description": "Chat application backend with Node.js, Express, and MongoDB",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && jest --config jest.config.json",
    "test:watch": "set NODE_OPTIONS=--experimental-vm-modules && jest --config jest.config.json --watch"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.4"
  }
}
